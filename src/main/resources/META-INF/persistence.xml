<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
			 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
			 version="2.0">

	<persistence-unit name="miniBlogApp" transaction-type="JTA">
		<jta-data-source>java:jboss/datasources/miniBlogAppDS</jta-data-source>
		<class>gr.mini.blog.models.Article</class>
		<class>gr.mini.blog.models.User</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<validation-mode>NONE</validation-mode>

		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect"/>
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="false" />
			<property name="hibernate.generate_statistics" value="false" />
			<property name="hibernate.integration.envers.enabled" value="false"/>

			<property name="hibernate.hbm2ddl.auto" value="update" />

			<property name="hibernate.cache.use_second_level_cache" value="false" />
			<property name="hibernate.cache.use_query_cache" value="false" />
		</properties>
	</persistence-unit>
</persistence>